<?xml version="1.0" encoding="UTF-8"?>
<Shell xmlns="http://xamarin.com/schemas/2014/forms"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:views="clr-namespace:TravelLanguageAssistant.Views"
       xmlns:local="clr-namespace:TravelLanguageAssistant"
       x:Class="TravelLanguageAssistant.AppShell">

    <TabBar>
        <Tab Title="Translate Image"
             Icon="camera">
            <ShellContent
                ContentTemplate="{DataTemplate views:TranslateImagePage}" />
        </Tab>
        <Tab Title="Translate Speech"
             Icon="speech">

            <ShellContent
                ContentTemplate="{DataTemplate views:TranslateSpeechPage}" />

        </Tab>

    </TabBar>
</Shell>
